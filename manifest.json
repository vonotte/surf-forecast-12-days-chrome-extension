{
    "name": "Surf Forecast 12 days",
    "description": "This extension allows you to view the 12-day forecast on surf-forecast.com.",
    "version": "0.0.1",
    "manifest_version": 2,
    "background": {
        "scripts": ["./background.js"]
    },
    "browser_action":{
        "default_popup": "popup.html"
    },
    "permissions":[
        "tabs",
        "https://*.surf-forecast.com/breaks/*"
    ]
}